{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:webview:default",
    "core:app:default",
    "core:resources:default",
    "core:image:default",
    "core:menu:default",
    "core:tray:default",
    "fs:default",
    "dialog:allow-open",
    "log:allow-log",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            {
              "validator": "\\S+"
            }
          ],
          "cmd": "",
          "name": "binaries/extract-pdf-pages",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "magick.exe",
          "cmd": "magick.exe",
          "args": [
            "-density",
            {
              "validator": "\\d+"
            },
            {
              "validator": ".+\\.pdf"
            },
            "-resize",
            {
              "validator": "\\d+x\\d+"
            },
            "-scene",
            {
              "validator": "\\d+"
            },
            "+adjoin",
            {
              "validator": ".+\\.webp"
            }
          ],
          "sidecar": false
        }
      ]
    },
    "http:default"
  ]
}